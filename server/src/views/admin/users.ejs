<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <header><%- include('./partials/header'); %></header>

    <main class="container">
      <div class="row justify-content-between align-items-center">
        <div class="col col-auto">
          <h1>Users</h1>
        </div>
        <div class="col col-auto">
          <button
            type="button"
            class="btn btn-success btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#userCreateModal"
          >
            <i class="bi bi-plus-lg"></i>
            Add
          </button>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <% userList.forEach((user, i) => { %>
            <tr title="<%= user.id %>">
              <th scope="row"><%= i + 1 %></th>
              <td><%= user.username %></td>
              <td>
                <%= user.email %> <% if (user.email && user.emailConfirmed) { %>
                <i class="bi-check-circle-fill text-success"></i>
                <% } else if (user.email && !user.emailConfirmed) { %>
                <i class="bi-question-circle-fill text-warning"></i>
                <% } %>
              </td>
              <td><%= new Date(user.createdAt).toLocaleString("en-EN") %></td>
              <td><%= new Date(user.updatedAt).toLocaleString("en-EN") %></td>
              <td>
                <div class="btn-group">
                  <button
                    type="button"
                    class="btn btn-warning btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#userUpdateModal"
                    data-bs-id="<%= user.id %>"
                    data-bs-username="<%= user.username %>"
                    data-bs-email="<%= user.email %>"
                    data-bs-email-confirmed="<%= user.emailConfirmed %>"
                  >
                    <i class="bi bi-pencil-fill"></i>
                  </button>
                  <button
                    class="btn btn-danger btn-sm"
                    type="button"
                    onclick="deleteUser('<%= user.id %>')"
                  >
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot class="table-group-divider">
            <tr>
              <td></td>
              <td>
                <b> <%= userList.length %> </b>
                Users
              </td>
              <td>
                <b> <%= userList.filter(u => u.email).length %> </b>
                Users with Email (<%= userList.filter(u => u.email
                &&!u.emailConfirmed ).length %>
                <i class="bi-question-circle-fill text-warning"></i>)
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </main>

    <!-- Modal: Create User -->
    <div
      class="modal fade"
      id="userCreateModal"
      tabindex="-1"
      aria-labelledby="userCreateModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="userCreateModalLabel">
              Create User
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form action="/admin/users" method="POST">
            <div class="modal-body">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  required
                  placeholder="Username"
                />
                <div id="usernameHelp" class="form-text">
                  Mindestens 6 Zeichen
                </div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="email"
                />
              </div>
              <div class="mb-3">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="emailConfirmed"
                  name="emailConfirmed"
                />
                <label for="emailConfirmed" class="form-label"
                  >Email confirmed</label
                >
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  required
                  placeholder="Password"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-outline-danger"
                data-bs-dismiss="modal"
              >
                <i class="bi bi-trash"></i>
                Close
              </button>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-check2"></i> Save changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Modal: Update User -->
    <div
      class="modal fade"
      id="userUpdateModal"
      tabindex="-1"
      aria-labelledby="userUpdateModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="userUpdateModalLabel">
              Update User
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form action="/admin/users/update" method="POST">
            <div class="modal-body">
              <div class="d-none">
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  name="id"
                  placeholder="id"
                />
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  required
                  placeholder="Username"
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Email"
                />
              </div>
              <div class="mb-3">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="emailConfirmed"
                  name="emailConfirmed"
                />
                <label for="emailConfirmed" class="form-label">
                  Email confirmed
                </label>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-outline-danger"
                data-bs-dismiss="modal"
              >
                <i class="bi bi-arrow-counterclockwise"></i>
                Close
              </button>
              <button type="submit" class="btn btn-success">
                <i class="bi bi-check2"></i> Save changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <footer><%- include('./partials/footer'); %></footer>

    <script type="text/javascript" defer>
      const updateModal = document.getElementById("userUpdateModal");
      if (updateModal) {
        updateModal.addEventListener("show.bs.modal", (event) => {
          const button = event.relatedTarget;
          const id = button.getAttribute("data-bs-id");
          const username = button.getAttribute("data-bs-username");
          const email = button.getAttribute("data-bs-email");
          const emailConfirmed = button.getAttribute("data-bs-email-confirmed");
          const modalId = updateModal.querySelector("input[name='id']");
          const modalUserName = updateModal.querySelector(
            "input[name='username']"
          );
          const modalEmail = updateModal.querySelector("input[name='email']");
          const modalEmailConfirmed = updateModal.querySelector(
            "input[name='emailConfirmed']"
          );
          modalId.value = id;
          modalUserName.value = username;
          modalEmail.value = email;
          modalEmailConfirmed.checked = emailConfirmed === "true";
        });
      }
    </script>
    <script type="text/javascript" defer>
      function deleteUser(id) {
        if (confirm("Are you sure you want to delete this user?")) {
          fetch(`/admin/users/${id}`, {
            method: "DELETE",
          })
            .then((data) => {
              window.location.reload();
            })
            .catch((err) => {
              console.error(err);
              alert("Something went wrong");
            });
        }
      }
    </script>
  </body>
</html>
